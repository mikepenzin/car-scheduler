<% include ../partials/header %>
<link type="text/css" href="/assets/css/main-page-style.css?v=<%= version %>" rel="stylesheet" />
<% include ../partials/navbar %>

    <div class="container mt-5 mb-5">
        <div class="row align-items-center justify-content-center">
            <% if (user.company.vendors && user.company.vendors.length > 0) { %>
                <div class="col-10 col-sm-10 col-md-6 col-lg-4 col-xl-4">
                    <a href="/company/<%= user.company._id %>/vendors">
                        <div class="card">
                            <div class="card-info">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3><%= user.company.vendors.length %></h3>
                                        <span>
                                            הספקים הרשומים בחברה
                                        </span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fal fa-pencil-alt azure font-large-2 float-left"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>   
            <% if (carsCounter > 0) { %>
                <div class="col-10 col-sm-10 col-md-6 col-lg-4 col-xl-4">
                    <a href="/company/<%= user.company._id %>/cars">
                        <div class="card">
                            <div class="card-info">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3><%= carsCounter %></h3>
                                        <span>
                                            רכבים רשומים בחברה
                                        </span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fal fa-bus orange font-large-2 float-left"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
            <% if (contractorCarsCounter > 0) { %>
                <div class="col-10 col-sm-10 col-md-6 col-lg-4 col-xl-4">
                    <a href="/company/<%= user.company._id %>/cars">
                        <div class="card">
                            <div class="card-info">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3><%= contractorCarsCounter %></h3>
                                        <span>
                                            רכבי קבלן רשומים בחברה
                                        </span>
                                    </div>
                                    <div class="align-self-center">
                                        <!--<i class="fal fa-map-marker-alt pink font-large-2 float-left"></i>-->
                                        <i class="fal fa-taxi pink font-large-2 float-left"></i>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>    
            <% if (totalAmountOFUsers > 0) { %>
                <div class="col-10 col-sm-10 col-md-6 col-lg-4 col-xl-4">
                    <a href="/company/<%= user.company._id %>/users">
                        <div class="card">
                            <div class="card-info">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3><%= totalAmountOFUsers %></h3>
                                        <span>
                                            סה"כ עובדים בחברה
                                        </span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fal fal fa-users salad-color font-large-2 float-left"></i>
                                    </div>
                                
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
            <% if (driversCounter > 0) { %>
                <div class="col-10 col-sm-10 col-md-6 col-lg-4 col-xl-4">
                    <a href="/company/<%= user.company._id %>/users">
                        <div class="card">
                            <div class="card-info">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3><%= driversCounter %></h3>
                                        <span>
                                            נהגים בחברה
                                        </span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fal fa-user-astronaut blue font-large-2 float-left"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
            <% if (driversCounter > 0) { %>
                <div class="col-10 col-sm-10 col-md-6 col-lg-4 col-xl-4">
                    <a href="/company/<%= user.company._id %>/rides">
                        <div class="card">
                            <div class="card-info">
                                <div class="media d-flex">
                                    <div class="media-body text-left">
                                        <h3><%= totalRides %></h3>
                                        <span>
                                            סה"כ נסיות בחברה
                                        </span>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fal fa-chart-line purple font-large-2 float-left"></i>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>

<% include ../partials/footer_data %>
<% include ../partials/footer %>
<% include ../partials/closing_tags %>